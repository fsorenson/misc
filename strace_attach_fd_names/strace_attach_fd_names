	'dup2' => \&syscall_dup2,
	'dup3' => \&syscall_dup3,

	'renameat' => \&syscall_renameat,
	'renameat2' => \&syscall_renameat,

	'getdents' => \&syscall_getdents,
	'getdents64' => \&syscall_getdents,

	'read' => \&syscall_read,
	'readlink' => \&syscall_readlink,
