	"symlink", # TODO: relative paths "symlinkat", # TODO: 2nd arg is a dfd

	"tgkill", 'timer_delete', 'times',

	'umount', 'umount2',
	'uname', 'unlink', "umask",
	'wait4', 'waitpid',
);


